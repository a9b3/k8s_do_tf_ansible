{% set ips=[] %}
{% for host in groups['etcd'] %}
  {% set to_concat = ['https://', hostvars[host]['ipv4_address_private'], ':2379'] %}
  {% set str = to_concat|join('') %}
  {% if ips.insert(loop.index, str) %}
  {% endif %}
{% endfor %}

{% set current=hostvars[inventory_hostname] %}
{% set certfile='/etc/kubernetes/certs/kubernetes.crt' %}
{% set keyfile='/etc/kubernetes/certs/kubernetes.key' %}

[Unit]
Description=Kubernetes API Server
Documentation=https://github.com/GoogleCloudPlatform/kubernetes

[Service]
ExecStart=/usr/bin/kube-apiserver \
  --admission-control=NamespaceLifecycle,LimitRanger,SecurityContextDeny,ServiceAccount,ResourceQuota \
  --advertise-address={{current['ipv4_address_private']}} \
  --allow-privileged=true \
  --apiserver-count={{groups['kube-controller']|length}} \
  --authorization-mode=ABAC \
  --authorization-policy-file=/etc/kubernetes/certs/authorization-policy.jsonl \
  --bind-address=0.0.0.0 \
  --enable-swagger-ui=true \
  --secure-port=6443 \
  --insecure-bind-address=0.0.0.0 \
  --insecure-port=8080 \
  --kubelet-certificate-authority=/etc/kubernetes/certs/ca.pem \
  --etcd-servers={{ips|join(',')}} \
  --etcd-cafile=/etc/kubernetes/certs/ca.pem \
  --etcd-certfile={{certfile}} \
  --etcd-keyfile={{keyfile}} \
  --service-account-key-file={{keyfile}} \
  --service-cluster-ip-range=10.32.0.0/24 \
  --service-node-port-range=30000-32767 \
  --tls-cert-file={{certfile}} \
  --tls-private-key-file={{keyfile}} \
  --token-auth-file=/etc/kubernetes/certs/token.csv \
  --v=2
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
